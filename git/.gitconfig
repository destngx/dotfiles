[user]
  email = chromevi123@gmail.com
  name = destngx
  signingkey = ~/.ssh/id_rsa.pub
[includeIf "gitdir:~/projects/others/"]
  path = .gitconfig-personal
[alias]
  a = "!git status --short | peco | awk '{print $2}' | xargs git add"
  d = diff
  f = fetch --all
  co = checkout
  ci = commit -S -m
  ca = commit --amend
  ps = "!git push origin $(git rev-parse --abbrev-ref HEAD)"
  pf = push --force-with-lease
  pl = "!git pull origin $(git rev-parse --abbrev-ref HEAD)"
  st = status
  ms = maintenance start
  br = branch -v
  df = "!git hist | peco | awk '{print $2}' | xargs -I {} git diff {}^ {}"
  hist = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all
  llog = log --graph --name-status --pretty=format:\"%C(red)%h %C(reset)(%cd) %C(green)%an %Creset%s %C(yellow)%d%Creset\" --date=relative
  ; Delete local branches that no longer exist on the remote
  gone = !git fetch -p && git branch -vv | grep 'origin/.*: gone]' | awk '{print $1}' | xargs git branch -D
   # show the last tag
  lt = describe --tags --abbrev=0
[branch]
  sort = -committerdate
[credential]
  helper = store
[gpg]
  format = ssh
[commit]
  gpgsign = true
[core]
  editor = nvim
  autocrlf = input
  eol = lf
  pager = delta
[delta]
  navigate = true
  dark = true
  side-by-side = false
  file-modified-label = modified:
  features = unobtrusive-line-numbers decorations
[merge]
  conflictstyle = diff3
[pull]
  rebase = true
[diff]
  colorMoved = default
  algorithm = histogram
[init]
  defaultBranch = main
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[maintenance]
  repo = /Users/destnguyxn/projects/obsidian-vaults
